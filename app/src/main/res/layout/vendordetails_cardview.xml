<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/vendor_details_vendorId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="8dp"
            android:text="Breakfast ID:"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/vendor_details_venforfullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="26dp"
            android:text="Vendor Full Name:"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/vendor_details_companyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="45dp"
            android:text="Company Name:"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/vendor_details_enterpriseid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="64dp"
            android:text="Enterprise ID:"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/vendor_details_enterprisename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="84dp"
            android:text="Enterprise Name:"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/vendor_details_menuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="104dp"
            android:text="Menu ID:"
            android:textColor="#000000"
            android:textSize="14sp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>